<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="25dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textview_vacation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainactivity_headline"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#000"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/edittext_vacation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/vacation_name"
        />




    <TextView
        android:id="@+id/edittext_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date_start"
        android:background="#eee"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/edittext_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date_end"
        android:background="#eee"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:inputType="none"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/button_plan_vacation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reise_planen"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="16dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        />

</LinearLayout>